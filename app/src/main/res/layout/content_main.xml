<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="518dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <!--
    View Pager to swipe to a new page
    -->
    <android.support.v4.view.ViewPager
        android:id="@+id/my_pager"
        android:layout_width="265dp"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp">


    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/black_square" />


    <!--
Maroon Background
-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/maroon_vector"/>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/black_square" />

    <!--
    Black Rectangle
    -->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/black_square"/>
    <FrameLayout
        android:id="@+id/TileFrame"
        android:layout_width="265dp"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="119dp">

        <!--
       Black Square
       -->
        <ImageView
            android:layout_width="265dp"
            android:layout_height="280dp"
            android:background="@drawable/black_square"/>
        <!--
        Row 1
        -->

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="add_Tile" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="0dp"
            android:onClick="add_Tile" />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="0dp"
            android:onClick="add_Tile" />



        <!--
        Row 2
        -->
        <Button
            android:id="@+id/button4"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="95dp"
            />

        <Button
            android:id="@+id/button5"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="95dp"
            />

        <Button
            android:id="@+id/button6"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="95dp"
            />
        <!--
        Row 3
        -->
        <Button
            android:id="@+id/button7"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="190dp" />

        <Button
            android:id="@+id/button8"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="190dp" />

        <Button
            android:id="@+id/button9"
            android:onClick="add_Tile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="190dp" />

    </FrameLayout>


    <Button
        android:id="@+id/the_tap"
        android:layout_width="79dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/scp_tap_icon"
        android:onClick="IncreaseCount"
        android:textSize="25sp" />


    <Button
        android:id="@+id/tile_build"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="3dp"
        android:onClick="onBuild"
        android:text="@string/tile" />

    <Button
        android:id="@+id/creeper_btn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="275dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="3dp"
        android:onClick="creeper"
        android:text="Creeper" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="7dp"
        android:text="@string/upgrades"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="72dp"
        android:layout_toEndOf="@+id/the_tap"
        android:text="Counter"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="37dp"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="@string/Greeting"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/counter"
        android:text="Next Btn" />


</RelativeLayout>